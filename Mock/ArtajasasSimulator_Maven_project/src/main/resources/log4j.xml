<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd" >
<log4j:configuration>
    <appender name="CONSOLEAPPENDER" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d{MMM dd, HH:mm:ss}] %5p %c{1}:%L - %m%n"/>
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMin" value="warn" />
        </filter>
    </appender>
    
    <appender name="FILEAPPENDER" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="${rootPath}logs/mfinoweb.log"/>
        <param name="MaxFileSize" value="10MB"/>
        <param name="MaxBackupIndex" value="3"/>
        <param name="Append" value="true"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d{MMM dd, HH:mm:ss}] %5p %c{1}:%L - %m%n"/>
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMin" value="trace" />
        </filter>
    </appender>
    
    <appender name="EMAILAPPENDER" class="org.apache.log4j.net.SMTPAppender">
        <param name="SMTPHost" value="mfinomailserver" />
        <param name="Threshold" value="error" />
        <param name="From" value="giridhar@mfino.com" />
        <param name="To" value="engr@mfino.com" />
        <param name="Subject" value="Error in Application (Smart)" />
        <param name="LocationInfo" value="true" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d{MMM dd, HH:mm:ss}] %5p %c{1}:%L - %m%n" />
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMin" value="error" />
        </filter>
    </appender>
    
    <appender name="ASYNC" class="org.apache.log4j.AsyncAppender">
        <appender-ref ref="FILEAPPENDER" />
    </appender>

    <root>
        <appender-ref ref="ASYNC"/>
    </root>
</log4j:configuration>
