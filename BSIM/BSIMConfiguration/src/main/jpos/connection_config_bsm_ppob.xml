<channel-adaptor name='bsmppob' class="org.jpos.q2.iso.ChannelAdaptor" logger="Q2_bsmppob">
    <channel class="org.jpos.iso.channel.ASCIIChannel" logger="Q2_bsmppob" packager="org.jpos.iso.packager.GenericPackager">
        <property name="host" value="localhost" />
        <property name="port" value="7778" />
        <property name="packager-logger" value="Q2_bsmppob" />
        <property name="packager-realm" value="mfino-debug" />
        <property name="packager-config" value="jpos/jpos_cfg/iso87ascii-bsm-ppob.xml" />
    </channel>
    <in>bsmppobsend</in>
    <out>bsmppobreceive</out>
    <reconnect-delay>5000</reconnect-delay>
</channel-adaptor>