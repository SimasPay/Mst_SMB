<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:camel="http://camel.apache.org/schema/spring" 
	xmlns:broker="http://activemq.apache.org/schema/core"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:osgi="http://www.springframework.org/schema/osgi"
	xmlns:cxf="http://camel.apache.org/schema/cxf" 
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:osgix="http://www.springframework.org/schema/osgi-compendium"
	xmlns:http="http://cxf.apache.org/transports/http/configuration"
	xmlns:sec="http://cxf.apache.org/configuration/security"
	xmlns:jaxws="http://cxf.apache.org/jaxws"
	xsi:schemaLocation="http://www.springframework.org/schema/beans   
	    http://www.springframework.org/schema/beans/spring-beans.xsd 
	    http://camel.apache.org/schema/spring  
	    http://camel.apache.org/schema/spring/camel-spring.xsd
	    http://www.springframework.org/schema/osgi   
	    http://www.springframework.org/schema/osgi/spring-osgi.xsd 
	    http://www.springframework.org/schema/osgi-compendium 
	    http://www.springframework.org/schema/osgi-compendium/spring-osgi-compendium.xsd 
	    http://www.springframework.org/schema/context 
	    http://www.springframework.org/schema/context/spring-context.xsd 
	    http://www.springframework.org/schema/tx 
       	http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
	    http://activemq.apache.org/schema/core 
	    http://activemq.apache.org/schema/core/activemq-core-5.5.0.xsd 
	    http://camel.apache.org/schema/cxf
		http://camel.apache.org/schema/cxf/camel-cxf.xsd 
		http://cxf.apache.org/transports/http/configuration 
		http://cxf.apache.org/schemas/configuration/http-conf.xsd
		http://cxf.apache.org/configuration/security 
		http://cxf.apache.org/schemas/configuration/security.xsd
		http://cxf.apache.org/jaxws 
		http://cxf.apache.org/schemas/jaxws.xsd">

<context:annotation-config />
	
  <osgi:reference id="bankService" interface="com.mfino.mce.backend.BankService"/>
  <osgi:reference id="transactionChargingService" interface="com.mfino.service.TransactionChargingService"/>
  <osgi:reference id="billPaymentsService" interface="com.mfino.billpayments.service.BillPaymentsService"/>
  <osgi:reference id="subscriberServiceImpl" interface="com.mfino.service.SubscriberService" />
  <osgi:reference id="sctlService" interface="com.mfino.service.SCTLService"/>
  
	<!-- define the jasypt properties parser with the given password to be used -->
	<bean id="jasypt"
		class="org.apache.camel.component.jasypt.JasyptPropertiesParser">
		<property name="password" value="sysenv:ENCRYPTION_KEY" />
		<property name="algorithm" value="PBEWITHMD5ANDTRIPLEDES" />
	</bean>

	<!-- define the camel properties component -->
	<bean id="properties"
		class="org.apache.camel.component.properties.PropertiesComponent">
		<!-- the properties file is in the classpath -->
		<property name="location" value="file:mfino_conf/mce.properties" />
		<!-- and let it leverage the jasypt parser -->
		<property name="propertiesParser" ref="jasypt" />
	</bean>

	
	<bean id="propertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>file:mfino_conf/mce.properties</value>
			</list>
		</property>
	</bean>

	<osgi:reference id="pooledConnectionFactory" interface="javax.jms.ConnectionFactory"/>
	<bean id="jmsConfig" 
		class="org.apache.camel.component.jms.JmsConfiguration">
		<property name="connectionFactory" ref="pooledConnectionFactory"/>
		<property name="concurrentConsumers" value="${concurrentConsumers}"/>
 	</bean>
 
	<bean id="jms" 
		class="org.apache.activemq.camel.component.ActiveMQComponent">
		<property name="configuration" ref="jmsConfig"/>
	</bean>

	<osgi:reference id="txManager" interface="org.springframework.orm.hibernate3.HibernateTransactionManager" />
	<bean id="billPayService" class="com.mfino.billpayments.bsim.impl.BillPaymentServiceImpl">
	    <property name="bankService" ref="bankService"/>
	    <property name="transactionChargingService" ref="transactionChargingService"/>	    
	    <property name="billPaymentsService" ref="billPaymentsService"/>
		<property name="subscriberService" ref="subscriberServiceImpl"/>
		<property name="sctlService" ref="sctlService"/>	    
	    <!-- <property name="plnBillers">
	        <set>
	           <value>301211</value>
	           <value>301422</value>
	           <value>305111</value>
	        </set>
     	</property> -->
     	<property name="plnPrepaidBillers">
	        <set>
	           <value>301422</value>
	        </set>
     	</property>
     	<property name="plnPostpaidBillers">
	        <set>
	           <value>301211</value>
	        </set>
     	</property>
     	<property name="plnNonTaglisBillers">
	        <set>
	           <value>305111</value>
	        </set>
     	</property>
     	<property name="keywords">
	        <set>
			 <value>ref</value>
			 <value>nama</value>
			 <value>meter</value>
			 <value>idpel</value>
			 <value>bayar</value>
			 <value>kwh</value>
			 <value>token</value>
			 <value>tariff</value>
			 <value>bl/th</value>
			 <value>registrasi</value>
			 <value>bank</value>
			 <value>tag</value>
			 <value>name</value>
			 <value>tarif</value>
			 <value>transaksi</value>
			 <value>informasi</value>
			 <value>pln</value>
			 <value>terdekat</value>
			 <value>tgl</value>
			 <value>biaya</value>
	        </set>
     	</property>
     	
     	<!-- List of keywords that are part of the entries to be considered while sending sms for pln prepaid billers -->
     	<property name="plnPrepaidSMSKeyWords">
	        <list>
			 <value>no ref</value>
			 <value>nama</value>
			 <value>no meter</value>
			 <value>idpel</value>
			 <value>rp bayar</value>
			 <value>kwh</value>
			 <value>token</value>
	        </list>
     	</property>
     	
     	<!-- List of keywords that are part of the entries to be considered while sending sms for pln postpaid billers -->
     	<property name="plnPostpaidSMSKeyWords">
	        <list>
			 <value>no ref</value>
			 <value>idpel</value>
			 <value>nama</value>
			 <value>tariff</value>
			 <value>bl/th</value>
			 <value>stand meter</value>
			 <value>rp tag pln</value>
			 <value>bank</value>
	        </list>
     	</property>
     	
     	<!-- List of keywords that are part of the entries to be considered while sending sms for pln non-taglis billers -->
     	<property name="plnNonTaglisSMSKeyWords">
	        <list>
			 <value>ref num</value>
			 <value>transaksi</value>
			 <value>no registrasi</value>
			 <value>tgl registrasi</value>
			 <value>nama</value>
			 <value>idpel</value>
			 <value>biaya</value>
			 <value>bank</value>
	        </list>
     	</property>
     	 
     	<!-- Mapping of keywords against the values to be displayed in entries sents as sms for pln prepaid billers. 
     	Ideally these entries should match with the list given in  plnPrepaidSMSKeyWords -->    	
     	<property name="plnPrepaidSMSKeyValues">
			<map>
			    <entry key="no ref" value="" />
				<entry key="nama" value="" />				
				<entry key="no meter" value="" />
				<entry key="idpel" value="" />
				<entry key="rp bayar" value="" />
				<entry key="kwh" value="kWh " />
				<entry key="token" value="Stroom/Token " />				
			</map>
		</property>
		
		<!-- Mapping of keywords against the values to be displayed in entries sents as sms for pln postpaid billers. 
     	Ideally these entries should match with the list given in  plnPostepaidSMSKeyWords -->    
		<property name="plnpostPaidSMSKeyValues">
			<map>
			    <entry key="no ref" value="" />
				<entry key="idpel" value="" />
				<entry key="nama" value="" />				
				<entry key="tariff" value="" />
				<entry key="bl/th" value="Bln" />
				<entry key="stand meter" value="Std" />
				<entry key="rp tag pln" value=" " />
				<entry key="bank" value="Adm " />				
			</map>
		</property>
		
		<!-- Mapping of keywords against the values to be displayed in entries sents as sms for pln non-taglis billers. 
     	Ideally these entries should match with the list given in  plnNonTaglisSMSKeyWords -->    
		<property name="plnNonTaglisSMSKeyValues">
			<map>
			    <entry key="ref num" value="" />
			    <entry key="transaksi" value="" />
				<entry key="no registrasi" value="" />				
				<entry key="tgl registrasi" value="" />
				<entry key="nama" value="" />
				<entry key="idpel" value="" />
				<entry key="biaya" value="" />
				<entry key="bank" value="Adm " />				
			</map>
		</property>
	</bean>
	
	<bean id="ccbillPayService" class="com.mfino.billpayments.bsim.BillInquiryProcessor" >
		<property name="subscriberService" ref="subscriberServiceImpl"/>
	</bean>
	
	<camelContext id="bsimContext" xmlns="http://camel.apache.org/schema/spring" useMDCLogging="true">
        <route> 
			<from uri="jms:bsimBillPayQueue" />
			<filter>
				<simple>${in.body.request} is 'com.mfino.fix.CmFinoFIX$CMBillPayInquiry'</simple>
				<filter>
					<simple>${in.body.request.getPaymentMode} == 'QRPayment'</simple> 
			  		<to uri="bean:billPayService?method=qrPaymentMoneyTransferInquirySourceToDestination"/>
					<filter>
		               <simple>${body.response} is 'com.mfino.fix.CmFinoFIX$CMQRPaymentInquiryToBank'</simple>
		               <to uri="jms:frontendRequestServiceQueue?disableReplyTo=true"/>
		        	</filter>
		        	<!-- below code will be needed for failure case of CMQRPaymentInquiryToBank not being created -->
					<filter>
		               <simple>${body.response} is 'com.mfino.mce.core.util.BackendResponse'</simple>
		              <to uri="jms:notificationQueue?disableReplyTo=true"/>
		        	</filter>
				</filter>
				<filter>
					<simple>${in.body.request.getPaymentMode} != 'QRPayment'</simple> 
					<to uri="bean:billPayService?method=billPayMoneyTransferInquirySourceToDestination"/>
					<filter>
						<simple>${body.response} is 'com.mfino.fix.CmFinoFIX$CMTransferInquiryToBank'</simple> 						
						<to uri="jms:frontendRequestServiceQueue?disableReplyTo=true"/>
					</filter>
					<filter>
		               <simple>${body.response} is 'com.mfino.mce.core.util.BackendResponse'</simple>
		              <to uri="jms:notificationQueue?disableReplyTo=true"/>
		        	</filter>
			    </filter>
			</filter>
			<filter>
				<simple>${in.body.request} is 'com.mfino.fix.CmFinoFIX$CMBillInquiry'</simple> <!-- Get Amount Flow -->
				<filter>
					<simple>${in.body.request.getNarration} == 'ccpayment'</simple> <!-- Confirmation Flow -->
       	 			<to uri="bean:ccbillPayService?method=constructRequestMessage"/>
           				<filter>
               				<simple>${body.response} is 'com.mfino.fix.CmFinoFIX$CMBSIMGetAmountToBiller'</simple>
               				<to uri="jms:bsimISOQueue?disableReplyTo=true"/>
           				</filter>
           				<filter>
               				<simple>${body.response} is 'com.mfino.mce.core.util.BackendResponse'</simple>
              				<to uri="jms:notificationQueue?disableReplyTo=true"/>
           				</filter>
	    		</filter>
	    		<filter>
					<simple>${in.body.request.getNarration} != 'ccpayment'</simple> <!-- Get Amount Flow-->
       	 			<to uri="bean:ccbillPayService?method=constructRequestMessage"/>
           				<filter>
               				<simple>${body.response} is 'com.mfino.fix.CmFinoFIX$CMBSIMGetAmountToBiller'</simple>
               				<to uri="jms:bsimISOQueue?disableReplyTo=true"/>
           				</filter>
           				<filter>
               				<simple>${body.response} is 'com.mfino.mce.core.util.BackendResponse'</simple>
              				<to uri="jms:notificationQueue?disableReplyTo=true"/>
           				</filter>
	    		</filter>
			</filter>
			<filter>
				<simple>${in.body.request} is 'com.mfino.fix.CmFinoFIX$CMQRPayment'</simple> <!-- Confirmation Flow -->
				<to uri="bean:billPayService?method=qrPaymentMoneyTransferSourceToDestination"/>
				<to uri="jms:frontendRequestServiceQueue?disableReplyTo=true"/>
				<stop/>
			</filter>
			<filter>
				<simple>${in.body.request} is 'com.mfino.fix.CmFinoFIX$CMBillPay'</simple> <!-- Confirmation Flow -->
				<to uri="bean:billPayService?method=billPayMoneyTransferSourceToDestination"/>
				<to uri="jms:frontendRequestServiceQueue?disableReplyTo=true"/>
			</filter>
			<filter>
				<simple>${in.body.request} is 'com.mfino.fix.CmFinoFIX$CMBillPayPendingRequest'</simple> <!-- Confirmation Flow -->
				<to uri="jms:backendServiceQueue?disableReplyTo=true"/>
			</filter>	
		</route>
		
        <route>
            <from uri="jms:bsimsourceToDestInquiryQueue" />
            <filter>
                <simple>${body.response} is 'com.mfino.fix.CmFinoFIX$CMQRPaymentInquiryFromBank'</simple>
                <filter>
		             <simple>${in.body.response.getResponseCode} == '00'</simple>
		             	<!-- send to bean and update status to 	CmFinoFIX.BillPayStatus_Biller_inq_pending);  -->
		             	<to uri="bean:billPayService?method=qrPaymentInquiryUpdateToBillerInquiryPending"/>
		             	<to uri="jms:postBankResponseQueue?disableReplyTo=true" />
		    	</filter>
		    	<filter>
		             <simple>${in.body.response.getResponseCode} != '00'</simple>
            			<to uri="bean:billPayService?method=qrPaymentMoneyTransferInquiryCompletionSourceToDestination"/>
		              	<to uri="jms:notificationQueue?disableReplyTo=true"/>
		    	</filter>  
            </filter>
            <filter>
                	<simple>${body.response} is 'com.mfino.fix.CmFinoFIX$CMPaymentAuthorizationFromBankForBsim'</simple>
		            	<to uri="bean:billPayService?method=qrPaymentMoneyTransferInquiryCompletionSourceToDestination" />
		             	<to uri="jms:notificationQueue?disableReplyTo=true"/>
		             	<stop/>
            </filter>  
            <filter>
					<simple>${in.body.request.getPaymentMode} != 'QRPayment'</simple> 
	            		<to uri="bean:billPayService?method=billPayMoneyTransferInquiryCompletionSourceToDestination"/>
	            		<to uri="jms:notificationQueue?disableReplyTo=true"/>
            </filter>
        </route>
        <route>
            <from uri="jms:bsimsourceToDestQueue" />
            <filter>
                <simple>${body.response} is 'com.mfino.fix.CmFinoFIX$CMPaymentAcknowledgementFromBankForBsim'</simple>
                <filter>
		             <simple>${in.body.response.getResponseCode} == '00'</simple>
		             	<to uri="bean:billPayService?method=qrPaymentMoneyTransferCompletionSourceToDestination" />
		             	<to uri="jms:notificationQueue?disableReplyTo=true"/>
    		             <stop/><!-- this stop is placed here to avoid an exception in  the below filter.Method(getResponseCode()) not found exception is throw below since the response is a BackendResponse Object -->
		    	</filter>
		    	<filter>
		             <simple>${in.body.response.getResponseCode} != '00'</simple>
		         	 <!-- not updating billpay status here since reversal is already sent and then response of reversal comes here-->
		             <to uri="jms:bsimreversalQueue?disableReplyTo=true"/>
		    	</filter>
            </filter>  
            <filter>
                <simple>${body.response} is 'com.mfino.fix.CmFinoFIX$CMQRPaymentFromBank'</simple>
                <filter>
		             <simple>${in.body.response.getResponseCode} == '00'</simple>
		              <!-- send to bean and update status to 	CmFinoFIX.BillPayStatus_Biller_confirmation_pending);  -->
		              <to uri="bean:billPayService?method=qrPaymentUpdateToBillerConfirmPending"/>
		             <to uri="jms:postBankResponseQueue?disableReplyTo=true" />
		    	</filter>
		    	<filter>
		             <simple>${in.body.response.getResponseCode} != '00'</simple>
		             <to uri="bean:billPayService?method=qrPaymentMoneyTransferCompletionSourceToDestination" />
		              <to uri="jms:notificationQueue?disableReplyTo=true"/>
		    	</filter>  
            </filter>
            <filter>
                <simple>${body.response} is 'com.mfino.fix.CmFinoFIX$CMBSIMBillPaymentFromBank'</simple>
                <to uri="bean:billPayService?method=billPayMoneyTransferCompletionSourceToDestination"/>
                <to uri="jms:notificationQueue?disableReplyTo=true"/>
            </filter>
           <filter>
               <simple>${body.response} is 'com.mfino.domain.NoISOResponseMsg'</simple>
               <filter>
               		<simple>${body.request} is 'com.mfino.fix.CmFinoFIX$CMQRPaymentToBank'</simple>
               		<to uri="bean:billPayService?method=qrPaymentReversalToBank"/>
               		<to uri="jms:frontendRequestServiceQueue?disableReplyTo=true"/>
               	</filter>
               	<filter>
               		<simple>${body.request} is 'com.mfino.fix.CmFinoFIX$CMBSIMBillPaymentToBank'</simple>
               		<to uri="bean:billPayService?method=billPayReversalToBank"/>
               		<to uri="jms:frontendRequestServiceQueue?disableReplyTo=true"/>
               	</filter>     	
           </filter>
        </route>
        <route>
            <from uri="jms:bsimAmountFromBankQueue" />
            <filter>
                <simple>${body.response} is 'com.mfino.fix.CmFinoFIX$CMBSIMGetAmountFromBiller'</simple>
				<to uri="bean:billPayService?method=billPayAmountInquiryFromBank"/>
            	<to uri="jms:notificationQueue?disableReplyTo=true"/>
            </filter>            
        </route>
        <route>
            <from uri="jms:bsimBillInquiryResponseQueue" />
            <to uri="bean:ccbillPayService?method=constructReplyMessage"/>
            <to uri="jms:notificationQueue?disableReplyTo=true"/>
        </route>
        <route>
            <from uri="jms:bsimreversalQueue" />
            <filter>
               		<simple>${body.request} is 'com.mfino.fix.CmFinoFIX$CMQRPaymentReversalToBank'</simple>
               		<to uri="bean:billPayService?method=qrPaymentReversalFromBank"/>
          			<to uri="jms:notificationQueue?disableReplyTo=true"/>
            </filter>
            <filter>
               		<simple>${body.request} is 'com.mfino.fix.CmFinoFIX$CMBSIMBillPaymentReversalToBank'</simple>
               		<to uri="bean:billPayService?method=billPayReversalFromBank"/>
          		    <to uri="jms:notificationQueue?disableReplyTo=true"/>
            </filter>
       </route>
	   <route>
	   <from uri="jms:acknowledgementServiceQueue?disableReplyTo=true" />
            <filter>
                <simple>${body.response} is 'com.mfino.fix.CmFinoFIX$CMPaymentAcknowledgementFromBankForBsim'</simple>
                <filter>
		             <simple>${in.body.response.getResponseCode} == '00'</simple>
		             	<to uri="bean:billPayService?method=billPayMoneyTransferCompletionSourceToDestination" />
		             	<to uri="jms:notificationQueue?disableReplyTo=true"/>
		    	</filter>
		    	<filter>
		             <simple>${in.body.response.getResponseCode} != '00'</simple>
		             <to uri="jms:bsimreversalQueue?disableReplyTo=true"/>
		    	</filter>
            </filter>
		</route>
  	</camelContext>

	<bean id="camelTracer" class="org.apache.camel.processor.interceptor.Tracer">
		<property name="traceOutExchanges" value="true" />
	</bean>

	<bean id="traceFormatter"
		class="org.apache.camel.processor.interceptor.DefaultTraceFormatter">
		<property name="showOutBody" value="true" />
		<property name="showOutBodyType" value="true" />
	</bean>
	
	<tx:annotation-driven transaction-manager="txManager" />		
</beans>