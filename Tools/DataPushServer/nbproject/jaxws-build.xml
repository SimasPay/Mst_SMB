<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xalan="http://xml.apache.org/xslt" xmlns:webproject2="http://www.netbeans.org/ns/web-project/2" xmlns:jaxws="http://www.netbeans.org/ns/jax-ws/1">
    <!--
                ===================
                JAX-WS WSIMPORT SECTION
                ===================
            -->
    <target name="wsimport-init" depends="init">
        <mkdir dir="${build.generated.sources.dir}/jax-ws"/>
        <taskdef name="wsimport" classname="com.sun.tools.ws.ant.WsImport">
            <classpath path="${java.home}/../lib/tools.jar:${j2ee.platform.wsimport.classpath}:${javac.classpath}"/>
        </taskdef>
        <condition property="conf-dir" value="${conf.dir}/" else="">
            <isset property="conf.dir"/>
        </condition>
    </target>
    <target name="wsimport-service-PGWDataPushService" depends="wsimport-init">
        <mkdir dir="${build.generated.dir}/jax-wsCache/service/PGWDataPushService"/>
        <wsimport sourcedestdir="${build.generated.dir}/jax-wsCache/service/PGWDataPushService" destdir="${build.generated.dir}/jax-wsCache/service/PGWDataPushService" wsdl="${basedir}/${conf-dir}xml-resources/web-services/PGWDataPushService/wsdl/PGWDataPushInterface.wsdl" catalog="catalog.xml" extension="true" verbose="true" xnocompile="true">
            <depends file="${basedir}/${conf-dir}xml-resources/web-services/PGWDataPushService/wsdl/PGWDataPushInterface.wsdl"/>
            <produces dir="${build.generated.dir}/jax-wsCache/service/PGWDataPushService"/>
        </wsimport>
        <copy todir="${build.generated.sources.dir}/jax-ws">
            <fileset dir="${build.generated.dir}/jax-wsCache/service/PGWDataPushService">
                <include name="**/*.java"/>
            </fileset>
        </copy>
        <copy todir="${build.web.dir}/WEB-INF/wsdl/PGWDataPushService">
            <fileset dir="${basedir}/${conf-dir}xml-resources/web-services/PGWDataPushService/wsdl/"/>
        </copy>
    </target>
    <target name="wsimport-service-clean-PGWDataPushService" depends="-init-project">
        <delete dir="${build.generated.sources.dir}/jax-ws/com/ztesoft/zsmart/bss/ws"/>
        <delete dir="${build.generated.dir}/jax-wsCache/service/PGWDataPushService"/>
    </target>
    <target name="wsimport-service-generate" depends="wsimport-service-PGWDataPushService"/>
</project>
