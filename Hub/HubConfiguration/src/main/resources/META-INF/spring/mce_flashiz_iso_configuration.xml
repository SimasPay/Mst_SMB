	<bean id="flashizFrontendService" class="com.mfino.mce.frontend.impl.FrontendServiceDefaultImpl">
		<property name="fixtoisoFactoryInstance" ref="flashizFIXToISOService"/>
	</bean>

	<bean id="propertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>file:mfino_conf/mce.properties</value>
			</list>
		</property>
	</bean>

	<osgi:reference id="pooledConnectionFactory" interface="javax.jms.ConnectionFactory"/>
	<bean id="jmsConfig" 
		class="org.apache.camel.component.jms.JmsConfiguration">
		<property name="connectionFactory" ref="pooledConnectionFactory"/>
		<property name="concurrentConsumers" value="${concurrentConsumers}"/>
 	</bean>
 
	<bean id="jms" 
		class="org.apache.activemq.camel.component.ActiveMQComponent">
		<property name="configuration" ref="jmsConfig"/>
	</bean>

	<osgi:reference id="txManager" interface="org.springframework.orm.hibernate3.HibernateTransactionManager" />
	
	<!-- Start the jpos manager -->
	<bean name="jposManager" class="com.mfino.mce.iso.jpos.JPOSManager"
		init-method="start" destroy-method="stop">
		<!-- deploy folder location where JPOS configuration files are defined -->
		<property name="deployFolder" value="jpos/deploy/" />
		<property name="muxName" value="flashizmux" />
		<property name="timeout" value="10000" />
		<property name="sleepOnNoReply" value="10000" />
		<property name="channelName" value="flashiz" />
		<property name="isoUtil" ref="flashizISOUtil" />
		<property name="echoInterval" value="300000" />
	</bean>

	<!-- JPOS sender configuration -->
	<camel:endpoint id="falshizIsoResponseEndpoint" uri="vm:flashizIsoResponseQueue" />
	<bean id="bankCommunicator" class="com.mfino.mce.iso.jpos.comm.JPOSProcessor">
		<constructor-arg index="0" value="flashizmux" />		
		<constructor-arg index="1" ref="falshizIsoResponseEndpoint" />
		<constructor-arg index="2" value="10000" />
	</bean>

	<bean id="isotofixfactory" class="com.mfino.flashiz.iso8583.FlashizIsoToFixProcessorFactory">
	</bean>
	
	<!-- Bean for aggregating the request and reponse when talking to iso server -->
	<bean id="aggStrategy" class="com.mfino.mce.frontend.FrontendAggregationStragety">
		<property name="isotofixFactoryInstance" ref="isotofixfactory" />
	</bean>

	<bean id="headerSetter" class="com.mfino.mce.frontend.FrontendSetHeader" />

	<bean id="noFlashizResponse" class="com.mfino.flashiz.iso8583.NoISOResponseProcessor" />

	<bean id="jposCommuniator" class="com.mfino.flashiz.iso8583.JPOSCommunicator">
		<constructor-arg index="0" ref="bankCommunicator"></constructor-arg>
		<constructor-arg index="1" ref="bankSimulator"></constructor-arg>
		<constructor-arg index="2" ref="failureProcessor"></constructor-arg>
		<constructor-arg index="3" value="flashizmux"/> 
		<!--most recent key exchange is valid for these many minutes-->
		<constructor-arg index="4" value="1440" />
	</bean>

	<bean id="bankSimulator" class="com.mfino.flashiz.iso8583.BankSimulator">
		<constructor-arg index="0" ref="falshizIsoResponseEndpoint" />
		<constructor-arg index="1" value="2000" />
	</bean>
	<bean id="failureProcessor" class="com.mfino.flashiz.iso8583.FailTheRequestProcessor">
		<constructor-arg index="0" ref="falshizIsoResponseEndpoint" />
		<constructor-arg index="1" value="2000" />
	</bean>
	
	<bean id="timeoutExp" class="com.mfino.flashiz.iso8583.CompletionTimeoutExpression">
		<property name="timeout" value="10000"/>
		<property name="reversalTimeout" value="200000"/>    
	</bean>
	
	<bean id="FlashizCommunicator" class="com.mfino.flashiz.iso8583.FlashizCommunicator">
	</bean>
	
	<camelContext id="flashiziso" xmlns="http://camel.apache.org/schema/spring">
    <onException>
        <exception>com.mfino.mce.iso.jpos.NoISOResponseException</exception>
        <redeliveryPolicy maximumRedeliveries="3"/>
        <handled>
            <constant>true</constant>
        </handled>
        <to uri="jms:ISOdeadLetterQueue?disableReplyTo=true"/>
    </onException>
    <onException>
        <exception>com.mfino.flashiz.iso8583.TimedoutISOException</exception>
        <handled>
            <constant>true</constant>
        </handled>
        <to uri="jms:ISOdeadLetterQueue?disableReplyTo=true"/>
    </onException>
    <route>
        <from uri="jms:flashizISOQueue?disableReplyTo=true"/>
        <multicast>
            <to uri="direct:a"/>
            <to uri="direct:b"/>
        </multicast>
    </route>
    <route>
        <from uri="direct:a"/>
        <process ref="headerSetter"/>
        <to uri="jms:flashizAggQueue?disableReplyTo=true"/>
    </route>
    <route>
        <from uri="direct:b"/>
        <threads threadName="Threads" poolSize="10">
            <to uri="bean:flashizFrontendService?method=processMessage"/>
            <bean method="processMessage" ref="jposCommuniator"/>
        </threads>
    </route>
    <route>
        <from ref="falshizIsoResponseEndpoint"/>
        <threads threadName="Threads" poolSize="10">
            <to uri="log:isoServerReply"/>
            <process ref="headerSetter"/>
            <to uri="jms:flashizAggQueue?disableReplyTo=true"/>
        </threads>
    </route>
    <route>
        <from uri="jms:flashizAggQueue?disableReplyTo=true"/>
        <aggregate strategyRef="aggStrategy">
            <description>&lt;header&gt;corr_id&lt;/header&gt;</description>
            <correlationExpression>
                <simple>header.corr_id</simple>
            </correlationExpression>
            <completionTimeout>
                <method ref="timeoutExp"></method>
            </completionTimeout>
            <completionSize>
                <constant>2</constant>
            </completionSize>
            <to uri="log:frontendreply]"/>
            <removeHeader headerName="CamelSlipEndpoint">
                <description>delayedReply header is set if the reply was delayed</description>
            </removeHeader>
            <to uri="bean:noFlashizResponse?method=processMessage"/>
            <to uri="jms:frontendResponseServiceQueue?disableReplyTo=true"/>
        </aggregate>
    </route>
</camelContext>	
<camelContext id="postBankResponse" xmlns="http://camel.apache.org/schema/spring" useMDCLogging="true">
		<route>
			<from uri="jms:postBankResponseQueue?disableReplyTo=true" />
     		<to uri="bean:FlashizCommunicator?method=processMessage" />
     		<to uri="jms:flashizISOQueue?disableReplyTo=true"/>
		</route>
	</camelContext>
	<bean id="camelTracer" class="org.apache.camel.processor.interceptor.Tracer">
		<property name="traceOutExchanges" value="true" />
	</bean>

	<bean id="traceFormatter"
		class="org.apache.camel.processor.interceptor.DefaultTraceFormatter">
		<property name="showOutBody" value="true" />
		<property name="showOutBodyType" value="true" />
	</bean>
	
	<tx:annotation-driven transaction-manager="txManager"/>
	
</beans>