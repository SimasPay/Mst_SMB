				<entry key="48" value="TABUNGANKU B" />
				<entry key="49" value="360" />	
				<entry key="63" value="1000000013001C00000000C00000000C00000000C00000000C00000000C00000000C00000000C00000000C00000000C00000000C00000000C00000000C00000000"	 />		
				<entry key="98" value="360360" />
