	<osgi:reference id="transactionLogServiceCoreImpl" bean-name="TransactionLogServiceImpl" interface="com.mfino.service.TransactionLogService"/>
		
	<osgi:reference id="sessionFactory" interface="org.hibernate.SessionFactory"/>
		
	<bean id="hubWebServiceCommunicator" class="com.mfino.hub.xmlrpc.communicator.HubWebServiceCommunicator" abstract="true">
		<property name="billPaymentsService" ref="billPaymentsService"/>
		<property name="transactionLogService" ref="transactionLogServiceCoreImpl"/>
		<property name="constantFieldsMap">
			<map>
			    <!--modify these specific to hub xmlrpc constants  -->
				<entry key="agent" value="12345" />
				<entry key="caid" value="121000" />
				<entry key="passcode" value="123456" />
			</map>
		</property>				
		<property name="url" value="http://127.0.0.1:9991/xmlrpc" />
		<property name="httpClient" ref="mfinoHttpClient" /> 
	</bean>
	
	<bean id="mfinoHttpClient" class="com.mfino.hub.xmlrpc.service.HubHttpConnector">
		<property name="timeout" value="30000" />
	</bean>
		
	<!--<bean id="hubTopupCommunicator"
		class="com.mfino.hub.xmlrpc.communicator.HubTopupCommunicator" 
		parent="hubWebServiceCommunicator" />-->
		
	<bean id="hubBillPayInquiryCommunicator"
		class="com.mfino.hub.xmlrpc.communicator.HubBillPayInquiryCommunicator" 
		parent="hubWebServiceCommunicator" />
		
	<bean id="hubBillPayCommunicator"
		class="com.mfino.hub.xmlrpc.communicator.HubBillPayCommunicator" 
		parent="hubWebServiceCommunicator" />
	
	<bean id="hubBillPayReversalCommunicator"
		class="com.mfino.hub.xmlrpc.communicator.HubBillPayReversalCommunicator" 
		parent="hubWebServiceCommunicator" />
	
	<bean id="propertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>file:mfino_conf/mce.properties</value>
			</list>
		</property>
	</bean>

	<osgi:reference id="pooledConnectionFactory" interface="javax.jms.ConnectionFactory" />
	<bean id="jmsConfig" class="org.apache.camel.component.jms.JmsConfiguration">
		<property name="connectionFactory" ref="pooledConnectionFactory" />
		<property name="concurrentConsumers" value="${concurrentConsumers}" />
	</bean>

	<bean id="jms" class="org.apache.activemq.camel.component.ActiveMQComponent">
		<property name="configuration" ref="jmsConfig" />
	</bean>
	
	<camelContext id="hubWebService" xmlns="http://camel.apache.org/schema/spring"
		useMDCLogging="true">
		<route>
        <!--Starting point for hub bill pay integrations-->
        <from uri="jms:hubBillPayQueue?disableReplyTo=true"/>
        <filter>
        	<simple>${in.body.request} is 'com.mfino.fix.CmFinoFIX$CMBillPayInquiry'</simple>
        	<filter>
        	    <simple>${in.body.request.getNarration} != 'online'</simple>
            	<to uri="bean:billPayMoneyTransferService?method=billPayMoneyTransferInquirySourceToSuspense"/>
            	<filter>
            		<simple>${body.response} is 'com.mfino.mce.core.util.BackendResponse'</simple>
                	<filter>
                	<!--money transfer inquiry is completed, proceed to bill payment inquiry-->
                    <simple>${body.response.result} == '0'</simple>
					<to uri="jms:hubBillerInquiryQueue?disableReplyTo=true"/>
  					</filter>
				</filter>
            	<filter>
		        	<simple>${body.response} is 'com.mfino.mce.core.util.BackendResponse'</simple>
       				<filter>
					<simple>${body.response.result} != '0'</simple>
             	    <setHeader headerName="eventContext">
				        <constant>SRC_SUSPENSE_INQ_FAILED</constant>
			        </setHeader>
			        <to uri="jms:hubBillPayEventProcessingQueue?disableReplyTo=true"/>
		        	</filter>
				</filter>
			</filter>
			<filter>
        	    <simple>${in.body.request.getNarration} == 'online'</simple>
            <to uri="jms:hubBillerInquiryQueue?disableReplyTo=true"/>
			</filter>
 		</filter>
		
        <filter>
	        <simple>${in.body.request} is 'com.mfino.fix.CmFinoFIX$CMBillPay'</simple>
            <to uri="bean:billPayMoneyTransferService?method=billPayMoneyTransferConfirmationSourceToSuspense"/>
           
            <filter>
				<!--Confirmation Flow-->
                <simple>${body.response} is 'com.mfino.mce.core.util.BackendResponse'</simple>
				<filter>
               		<simple>${body.response.result} == '0'</simple>
               	    <setHeader headerName="eventContext">
               	    	<constant>SRC_SUSPENSE_CONFIRMATION_SUCCESS</constant>
               	    </setHeader>
                  	     <to uri="jms:hubBillerConfirmationQueue?disableReplyTo=true"/>
				</filter>
       		</filter>
            <filter>
				<simple>${body.response} is 'com.mfino.mce.core.util.BackendResponse'</simple>
            
                <filter>
                	<!--money transfer inquiry is completed, proceed to bill payment inquiry -->
                	<simple>${body.response.result} != '0'</simple>
                	<setHeader headerName="eventContext">
       	        	    <constant>SRC_SUSPENSE_CONFIRMATION_FAILED</constant>
                	</setHeader>
                		<to uri="jms:hubBillPayEventProcessingQueue?disableReplyTo=true"/>
                </filter>
			</filter>
            
         <!-- <filter>
	            <simple>${body.response} is 'com.mfino.fix.CmFinoFIX$CMMoneyTransferToBank'</simple>
                <setHeader headerName="eventContext">                       
	                <constant>SRC_SUSPENSE_CONFIRMATION_TO_BANK</constant>
                </setHeader>
                <multicast>
	                <to uri="jms:hubBillPayEventProcessingQueue?disableReplyTo=true"/>
                    <to uri="jms:frontendRequestServiceQueue?disableReplyTo=true"/>
                </multicast>
            </filter>    -->            
		
