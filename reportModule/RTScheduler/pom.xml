	<build>
	   	<finalName>${project.groupId}-${project.artifactId}</finalName>

		<plugins>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.4.1</version>
				<executions>
					<execution>
						<id>copy-resources</id>
						<!-- here the phase you need -->
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${basedir}/target/RTScheduler/WEB-INF</outputDirectory>
							<resources>
								<resource>
									<targetPath>${basedir}/target/RTScheduler/WEB-INF/</targetPath>
									<directory>src/main/java</directory>
									<includes>
										<include>rtscheduler.properties</include>
									</includes>	
								</resource>
								<resource>
									<targetPath>${basedir}/target/RTScheduler/WEB-INF/smartrt</targetPath>
									<directory>src/main/resources/${profile}</directory>
									<includes>
										<include>*.prpt</include>
									</includes>	
								</resource>	
							</resources>
						</configuration>
					</execution>
