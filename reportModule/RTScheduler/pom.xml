				<version>2.4.1</version>
				<executions>
					<execution>
						<id>copy-resources</id>
						<!-- here the phase you need -->
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${basedir}/target/RTScheduler/WEB-INF</outputDirectory>
							<resources>
								<resource>
									<directory>${basedir}/../../Core/settings/${profile}</directory>
									<includes>
										<include>spring-datasource-beans.xml</include>
										<include>category.bankCodes.txt</include>
										<include>category.purchase.txt</include>
										<include>category.payments.txt</include>
										<include>defaultJson.txt</include>
										<include>errorJson.txt</include>
									</includes>
									<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
