<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>MfinoCoreEngine</artifactId>
    <groupId>com.mfino.mce</groupId>
    <version>0.1-SNAPSHOT</version>
  </parent>
  <groupId>com.mfino.mce.iso.jpos</groupId>
  <artifactId>JPOSComponent</artifactId>
  <version>0.1-SNAPSHOT</version>
  <packaging>bundle</packaging>
  <name>JPOS Component</name>
  <description>JPOS Component ISO Message</description>
  <repositories>
    <repository> 
      <id>jpos</id> 
      <name>jPOS Central Repository</name> 
      <url>http://jpos.org/maven</url> 
      <layout>default</layout> 
    </repository>
    </repositories>
    <dependencies> 
    <dependency>
      <groupId>org.jpos</groupId>
      <artifactId>jpos</artifactId>
      <version>1.8.2</version>
    </dependency>
    <dependency>
      <groupId>com.mfino.mce</groupId>
      <artifactId>MCECore</artifactId>
      <version>0.1-SNAPSHOT</version>
      <scope>compile</scope>
    </dependency>
    </dependencies>
    <build>
    	<plugins>
    		<plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>1.4.0</version>
        <extensions>true</extensions>
        <configuration>
          <instructions>
              <Bundle-SymbolicName>${project.groupId}.${project.artifactId}</Bundle-SymbolicName>
              <Bundle-Name>${project.artifactId}</Bundle-Name>
              <Bundle-Version>1.0.0</Bundle-Version>
              <!-- <Bundle-Activator>com.mfino.mce.core.CoreActivator</Bundle-Activator> -->
               <Import-Package>org.osgi.framework,*;
              </Import-Package>
              <Export-Package>com.mfino.mce.iso.jpos.*</Export-Package>
          </instructions>
      </configuration>
  </plugin>
    	</plugins>
    </build>
</project>