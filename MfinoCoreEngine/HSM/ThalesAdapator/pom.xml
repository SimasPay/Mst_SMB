<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
	<groupId>com.mfino.mce</groupId>
	<artifactId>HSM</artifactId>
	<version>0.1-SNAPSHOT</version>
  </parent>
  <groupId>com.mfino.hsm.Thales</groupId>
  <artifactId>ThalesAdaptor</artifactId>
  <version>0.1-SNAPSHOT</version>
  <packaging>bundle</packaging>
	<repositories>
		<repository>
			<id>jpos</id>
			<name>jPOS Central Repository</name>
			<url>http://jpos.org/maven</url>
			<layout>default</layout>
		</repository>
	</repositories>
	<dependencies>
		<dependency>
			<groupId>jdom</groupId>
			<artifactId>jdom</artifactId>
			<version>[0.9,1.0]</version>
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>org.jpos</groupId>
			<artifactId>jpos</artifactId>
			<version>1.8.2</version>
		</dependency>
		<dependency>
			<groupId>com.mfino.application</groupId>
			<artifactId>Core</artifactId>
			<version>0.1-SNAPSHOT</version>
			<scope>compile</scope>
	</dependency>
	<dependency>
	    <groupId>com.mfino.mce</groupId>
		<artifactId>MCECore</artifactId>
		<version>0.1-SNAPSHOT</version>
	</dependency>	
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>1.4.0</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.groupId}.${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Name>${project.artifactId}</Bundle-Name>
						<Bundle-Version>1.0.0</Bundle-Version>
						<Buildtime>${buildtime}</Buildtime>
						<Release>${release}</Release>
						<Revision>${revision}</Revision>
						<Import-Package>org.jdom.*;version="[0.9,1.1]",*</Import-Package>
						<Export-Package>com.mfino.hsm.*</Export-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>