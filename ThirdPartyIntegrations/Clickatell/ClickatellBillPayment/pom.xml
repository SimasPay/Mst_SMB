<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.mfino.application</groupId>
		<artifactId>Clickatell</artifactId>
		<version>0.1-SNAPSHOT</version>
	</parent>
	
	<artifactId>ClickatellBillPayment</artifactId>
	<name>ClickatellBillPayment</name>
	<packaging>bundle</packaging>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<camel-version>2.7.1-fuse-00-43</camel-version>
		<cxf.version>2.4.1-fuse-00-43</cxf.version>
	</properties>
	
   <repositories>
		<repository>
			<id>jpos</id>
			<name>jPOS Central Repository</name>
			<url>http://jpos.org/maven</url>
			<layout>default</layout>
		</repository>
	</repositories>
	<dependencies>
     <dependency>
      <groupId>org.apache.camel</groupId>
      <artifactId>camel-core</artifactId>
      <version>${camel-version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.camel</groupId>
      <artifactId>camel-spring</artifactId>
      <version>${camel-version}</version>
    </dependency>
    <dependency>
        <groupId>org.apache.camel</groupId>
        <artifactId>camel-jasypt</artifactId>
        <version>${camel-version}</version>
    </dependency>
		<dependency>
	    	<groupId>com.mfino.mce</groupId>
	    	<artifactId>Backend</artifactId>
	    	<version>${project.version}</version>
	    </dependency>
		<dependency>
			<groupId>org.jpos</groupId>
			<artifactId>jpos</artifactId>
			<version>1.8.2</version>
		</dependency>
		<dependency>
			<groupId>com.mfino.application</groupId>
			<artifactId>Core</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.mfino.mce</groupId>
			<artifactId>ISODefinitions</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.mfino.mce.iso.jpos</groupId>
			<artifactId>JPOSComponent</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
		    <groupId>com.mfino.application</groupId>
		    <artifactId>BillPayments</artifactId>
		    <version>${project.version}</version>		    
	   </dependency>
		<dependency> 
			<groupId>com.mfino.mce</groupId>
			<artifactId>MCECore</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>1.4.0</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.groupId}.${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Name>${project.artifactId}</Bundle-Name>
						<Bundle-Version>1.0.0</Bundle-Version>
						<Buildtime>${buildtime}</Buildtime>
						<Release>${release}</Release>
						<Revision>${revision}</Revision>
						<Import-Package>*
						</Import-Package>
						<Export-Package>com.mfino.billpayments.clickatell.*</Export-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
