{
    "ReportName" : "TransactionMonthlyReport",
    
    "ReportHeaderText" : "Transaction Monthly Report",
                            
    "ReportHeader" : [   
                           [ "Date Range From" , "${StartTime}", "To" , "${EndTime}" ],
   						   [ "Partner Code" , "${PartnerCode}"],
   						   [ "Biller Code" , "${BillerCode}"],   	
                           [ "Transaction Status", "${TransactionStatus}"]
                     ],
    
    "ReportHeaderDataColumnsWidth" : [ 5,3,1,6 ],
         
    "HeaderColumns" : [ "TransactionName",
						"No of Transactions", 
    					"Status",
    					"Total Amount",
    					"Month"
						],
    
    "HeaderColumnsWidth" : [1,1,1,1,1],

    "EncryptedColumnIndices" : [],
        
    "Query" : "	SELECT 
					t.TransactionName, count(*), 
					case  s.status WHEN  4 THEN  'Success' WHEN  5  THEN  'Failed'  END,
					sum(s.transactionamount), 
					Concat(date_format(s.LastUpdateTime,'%Y '), date_format(s.LastUpdateTime, '%c'))
				FROM 
					service_charge_txn_log s, 
					transaction_type t ",
    
    "ReportFooter" : [ 
                           [ "Report Generation Date" , "${ReportGenerationDate}", "Generated By" , "${UserName}" ]
                          ],
    
    "ReportFooterDataColumnsWidth" : [ 2,1,1,2 ],
        
    "PageSize" : "A4",

    "PageOrientation" : "portrait"
    
}